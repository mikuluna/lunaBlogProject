<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.luna.myblog.entity.LunaDance" table="lunadance">
        <id name="id" column="id"><!-- 主键 name指的是属性名字 -->
            <generator class="increment"/><!-- 生成策略native自动，assigned手动 -->
        </id>
        <property name="imgFace" type="java.lang.String" column="imgface"/>
       <property name="danceUrl" type="java.lang.String" column="danceurl"/>
       <property name="danceTitle" type="java.lang.String" column="dancetitle"/>
     
    </class>

</hibernate-mapping>